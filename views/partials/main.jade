div(ng-controller="MedListCtrl")
	div.med-list-container(ng-model="data")
		h1 {{name}}, these are your current medications: 
		div.col-md-5#medList
			div.single-med(ng-repeat="med in data")
				div.med-container(draggable="true" is-draggable med="med")
					h4.med-title {{med.Medication}}
					h6.med-instructions {{med.Instructions}}

		div.col-md-2#space
		div.col-md-5#schedule
			div(ng-controller="ListCtrl")
				h3 Morning <i class="icon-cloud-sun"></i>
				div.morning-container(draggable="true" drop-target="true" ng-model="list")
					div(ng-class="{hide: list.length > 0}") Drag and drop your morning medications here!
					div(ng-repeat="med in list" draggable="true" is-draggable)
						p(id="{{med.id}}") {{med.Medication}}
			div(ng-controller="ListCtrl")
				h3 Afternoon <i class="icon-sun"></i>
				div.afternoon-container(draggable="true" drop-target="true" ng-model="list")
					div(ng-class="{hide: list.length > 0}") Drag and drop your afternoon medications here!
					div(ng-repeat="med in list" draggable="true" is-draggable)
						p(id="{{med.id}}") {{med.Medication}}
			div(ng-controller="ListCtrl")
				h3 Evening <i class="icon-moon"></i>
				div.evening-container(draggable="true" drop-target="true" ng-model="list")
					div(ng-class="{hide: list.length > 0}") Drag and drop your evening medications here!
					div(ng-repeat="med in list" draggable="true" is-draggable)
						p(id="{{med.id}}") {{med.Medication}}
